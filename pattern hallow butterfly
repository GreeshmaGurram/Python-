n = int(input())

for i in range(1, (2*n)+1):
    if i == 1 or i == (2*n):
        print("* " + "  " * ((2*n)-2) + "* ")
    elif i <= n:
        print("* " + "  " * (i-2) + "* " + "  " * ((2*n)-(2*i)) + "* " + "  " * (i-2) + "* ")
    else:
        print("* "+ "  " * ((2*n) - i -1) + "* " + "  " * ((2*i)-(2*n) - 2) + "* "+ "  " * ((2*n) - i -1) + "* ")
