n = int(input())

for i in range(1, (2*n)):
    r = ""
    if i == 1 or i == ((2*n)-1):
        print(" " * (n-1) + "1 " + " " * (n-1))
    elif i <= n:
        print(" " * (n-i) + "1 " + "  " * (i-2) + (str(i) + " "))
    else:
        print(" "*(i-n) + "1 " + "  " * ((2*n)-i-2) + (str((2*n) - i) + " "))
